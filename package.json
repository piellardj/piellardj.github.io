  "license": "ISC",
  "dependencies": {
    "@types/node": "^14.11.8",
    "shx": "^0.3.2",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3",
    "webpage-templates": "github:piellardj/webpage-templates"
  }
}
