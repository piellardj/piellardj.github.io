{
  "name": "piellardj.github.io",
  "version": "3.1.0",
  "description": "Homepage",
  "private": true,
  "homepage": "https://piellardj.github.io",
  "repository": "github:piellardj/piellardj.github.io",
  "main": "src/generate-page.ts",
  "scripts": {
    "copy-assets": "shx cp -r src/images/* images",
    "generate-page": "ts-node-script src/generate-page.ts .",
    "build": "npm run generate-page && npm run copy-assets",
    "rebuild": "npm run clean && npm run build",
    "clean": "shx rm -rf css images/*.* script favicon-* *.html"
  },
